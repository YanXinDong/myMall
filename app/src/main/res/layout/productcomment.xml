<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_coment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_user_photo1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/zwyj4" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_user_photo1"
            android:textColor="@color/color_black_333333"
            android:textSize="11sp"
            tools:text="tiger32" />

        <com.BFMe.BFMBuyer.view.RatingBar
            android:id="@+id/ll_start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_user_photo1"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_user_photo1"
            app:starEmpty="@drawable/_off"
            app:starFill="@drawable/_on"
            app:starImageSize="10dp"
            app:starPadding="2dp"
            app:stepSize="Full" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:textColor="@color/color_grey_999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_user_name"
            android:layout_below="@id/ll_start1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_black_333333"
            android:textSize="12sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_comment_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>
