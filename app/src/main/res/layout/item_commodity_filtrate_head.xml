<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/price_section"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_max_price"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="15dp"
        android:background="@color/translucence_gray_fafafafa"
        android:gravity="center"
        android:hint="@string/max_price"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/color_black_ff666666"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_flag"
        android:layout_width="14dp"
        android:layout_height="1dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@id/et_max_price"
        android:layout_toRightOf="@id/et_max_price"
        android:background="@color/black" />

    <EditText
        android:id="@+id/et_min_price"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/view_flag"
        android:layout_toRightOf="@id/view_flag"
        android:background="@color/translucence_gray_fafafafa"
        android:gravity="center"
        android:hint="@string/min_price"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/color_black_ff666666"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_max_price"
        android:layout_marginTop="10dp"
        android:background="@color/grey_f0f0f0" />
</RelativeLayout>