<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_layout"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_bound_product"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
         />

    <TextView
        android:id="@+id/tv_bound_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_bound_product"
        android:layout_toEndOf="@id/iv_bound_product"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_black_333333"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"

        />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_bound_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorZhu"
        android:layout_toRightOf="@id/iv_bound_product"
        android:layout_toEndOf="@id/iv_bound_product"
        android:layout_alignBottom="@id/iv_bound_product"
        />

    <TextView
        android:layout_marginRight="20dp"
        android:id="@+id/tv_bound_product_shop"
        android:gravity="right"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_bound_product"
        />
</RelativeLayout>