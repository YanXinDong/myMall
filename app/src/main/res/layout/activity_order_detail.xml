<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_top_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="50.0dip"
                    android:layout_marginRight="50.0dip"
                    android:background="@drawable/tab_line" />

                <LinearLayout
                    android:id="@+id/ll_order_info"
                    android:layout_width="fill_parent"
                    android:layout_height="104dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_submit_order"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tab_icon_a" />

                        <TextView
                            android:id="@+id/tv_submit_order"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="13dp"
                            android:text="@string/submit_order"
                            android:textColor="@color/font_black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_out_storehouse_order"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tab_icon_b" />

                        <TextView
                            android:id="@id/tv_submit_order"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="13dp"
                            android:text="@string/commodity_send_out"
                            android:textColor="@color/font_black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_overseas_storehouse"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tab_icon_c" />

                        <TextView
                            android:id="@id/tv_submit_order"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="13dp"
                            android:text="@string/overseas_warehouse"
                            android:textColor="@color/font_black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_wait_recicve_goods"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tab_icon_d" />

                        <TextView
                            android:id="@id/tv_submit_order"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="13dp"
                            android:text="@string/wait_receiving"
                            android:textColor="@color/font_black"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_finish"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tab_icon_e" />

                        <TextView
                            android:id="@id/tv_submit_order"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="13dp"
                            android:text="@string/finish"
                            android:textColor="@color/font_black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_waitepay"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/tab_tip_bg"
                    android:gravity="center"
                    android:text="@string/order_waitepay"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ll_logistics_layout"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_logistics_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/logistics_icon" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/list_arrow" />

                <TextView
                    android:id="@+id/tv_logistics_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iv_logistics_icon"
                    android:layout_toRightOf="@id/iv_logistics_icon"
                    android:textColor="@color/app_content_color"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="暂无物流信息" />

                <TextView
                    android:id="@+id/tv_logistics_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@id/iv_logistics_icon"
                    android:layout_toLeftOf="@id/iv_arrow"
                    android:layout_toRightOf="@id/iv_logistics_icon"
                    android:layout_toStartOf="@id/iv_arrow"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorZhu"
                    android:textSize="12sp"
                    tools:text="Llegada a la Oficina Internacional de destino" />

                <TextView
                    android:id="@+id/tv_logistics_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_logistics_name"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/iv_logistics_icon"
                    android:layout_toRightOf="@id/iv_logistics_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/gray_dark_bg"
                    android:textSize="10sp"
                    tools:text="2017-04-14  16:11:42" />

                <TextView
                    android:id="@+id/tv_logistics_hj_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_logistics_name"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/iv_arrow"
                    android:layout_toStartOf="@id/iv_arrow"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorZhu"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:text="订单包含保税仓商品，详细物流信息见详情" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_address_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/tv_order_receiving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/iv_address_icon"
                    android:layout_toRightOf="@id/iv_address_icon"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:textColor="@color/font_black"
                    android:textSize="12sp"
                    tools:text="收货人：May" />

                <TextView
                    android:id="@+id/tv_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/iv_address_icon"
                    android:layout_toRightOf="@id/iv_address_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/font_black"
                    android:textSize="12sp"
                    tools:text="收货地址：北京 北京市 朝阳区 朝阳雅筑1-1-502" />

                <TextView
                    android:id="@+id/tv_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/font_black"
                    android:textSize="12sp"
                    tools:text="17600026030" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_order_shop_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_order_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_order_shop_icon"
                    android:layout_toRightOf="@id/iv_order_shop_icon"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/app_content_color"
                    android:textSize="12sp"
                    tools:text="魔女小Q英国代购" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="@string/shop_info"
                    android:textColor="@color/app_content_color"
                    android:textSize="11sp" />

            </RelativeLayout>


            <com.BFMe.BFMBuyer.view.MyListView
                android:id="@+id/lv_order_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@drawable/lina_a"
                android:dividerHeight="0.30000007dip"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/remark"
                    android:textColor="@color/font_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/order_remarks_hint"
                    android:textColor="@color/gray_dark_bg"
                    android:textSize="10sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.30000007dip"
                    android:background="@drawable/lina_a" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/commodity_total_price"
                        android:textColor="@color/app_content_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/freight"
                        android:textColor="@color/app_content_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tariff"
                        android:textColor="@color/app_content_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/integral_deduction"
                        android:textColor="@color/app_content_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_integral_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="12sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distribution_way"
                        android:textColor="@color/app_content_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_order_distribution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="12sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.30000007dip"
                    android:background="@drawable/lina_a" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_total_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorZhu"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_total_num"
                        android:layout_toStartOf="@id/tv_total_num"
                        android:text="@string/real_pay_in_total"
                        android:textColor="@color/font_black"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_id"
                    android:textColor="@color/font_black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_order_creat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/order_create_time"
                    android:textColor="@color/font_black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/finish_time"
                    android:textColor="@color/font_black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/pay_way"
                    android:textColor="@color/font_black"
                    android:textSize="11sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <View
                    android:id="@+id/view_sign"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true" />

                <Button
                    android:id="@+id/bt_right"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/view_sign"
                    android:background="@drawable/shape_circle_range2"
                    tools:text="fukuan"
                    android:textColor="@color/colorZhu"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/bt_middle"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.0dip"
                    android:layout_toLeftOf="@id/bt_right"
                    android:background="@drawable/gray_bg"
                    tools:text="quxiao"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/bt_left"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5.0dip"
                    android:layout_toLeftOf="@id/bt_middle"
                    android:background="@drawable/yellow_bg"
                    tools:text="kefu"
                    android:textColor="@color/yellow"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>