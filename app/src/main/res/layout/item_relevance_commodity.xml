<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_layout"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_relevance_commodity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
         />

    <TextView
        android:id="@+id/tv_relevance_commodity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_relevance_commodity"
        android:layout_toEndOf="@id/iv_relevance_commodity"
        tools:text="楼上是傻逼额围绕功能尽快给你楼上是傻逼额围绕功能尽快给你楼上是傻逼额围绕功能尽快给你楼上是傻逼额围绕功能尽快给你"
        android:textSize="14sp"
        android:textColor="@color/color_black_333333"
        android:minLines="1"
        android:maxLines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/tv_relevance_commodity_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="¥ 7800"
        android:textColor="@color/colorZhu"
        android:layout_toRightOf="@id/iv_relevance_commodity"
        android:layout_toEndOf="@id/iv_relevance_commodity"
        android:layout_alignBottom="@id/iv_relevance_commodity"
        />


</RelativeLayout>