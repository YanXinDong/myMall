<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:background="@android:color/white"
              android:id="@+id/ll_edit_address"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_check_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/cart_checkbox_selector"
            android:checked="false"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cb_check_shop"
            android:textSize="13sp"
           />

        <TextView
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:textSize="13sp"
            android:id="@+id/tv_account_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:minLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/cb_check_shop"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"/>
</LinearLayout>
