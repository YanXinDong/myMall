<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_comm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.BFMe.BFMBuyer.view.MyListView
                android:id="@+id/lv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                 />

            <LinearLayout
                android:background="@android:color/white"
                android:layout_marginTop="5dp"
                android:layout_below="@id/lv_comment"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_below="@id/lv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/satisfaction_evaluation"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/color_black_333333"
                     />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/translucence_gray_fafafafa"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="@color/color_black_ff666666"
                        android:text="@string/describe" />

                    <com.BFMe.BFMBuyer.view.RatingBar
                        android:id="@+id/rb_start1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:starCount="5"
                        app:starEmpty="@drawable/_off"
                        app:starFill="@drawable/_on"
                        app:starImageSize="18dp"
                        app:starPadding="8dp"
                        app:starStep="5"
                        app:stepSize="Full"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/color_black_ff666666"
                        android:layout_centerVertical="true"
                        android:text="@string/speed" />

                    <com.BFMe.BFMBuyer.view.RatingBar
                        android:id="@+id/rb_start2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:starCount="5"
                        app:starEmpty="@drawable/_off"
                        app:starFill="@drawable/_on"
                        app:starImageSize="18dp"
                        app:starPadding="8dp"
                        app:starStep="5"
                        app:stepSize="Full"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="@color/color_black_ff666666"
                        android:text="@string/service_attitude" />

                    <com.BFMe.BFMBuyer.view.RatingBar
                        android:id="@+id/rb_start3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:starCount="5"
                        app:starEmpty="@drawable/_off"
                        app:starFill="@drawable/_on"
                        app:starImageSize="18dp"
                        app:starPadding="8dp"
                        app:starStep="5"
                        app:stepSize="Full"
                        />
                </RelativeLayout>

                <View
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/translucence_gray_fafafafa"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <CheckBox
                        android:id="@+id/cb_comm_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:button="@drawable/cart_checkbox_selector"
                        android:checked="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/cb_comm_off"
                        android:textSize="12sp"
                        android:textColor="@color/color_black_ff666666"
                        android:text="@string/anonymous_evaluation" />

                </RelativeLayout>

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/btn_commit"
                    android:layout_width="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_circle_range1"
                    android:text="@string/submit"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
